extends ../layout

block content
    h1= title
    button(id='create_order') Создать
    button(id='delete_order') Удалить
    button(id='update_order') Изменить
    table
        tr 
            th id
            th Название
            th Клиент
            th Статус
            th Сумма
        each item in orders
            tr
                td= item.id
                td= item.label
                td= item.id_client
                td= item.id_status
                td= item.amount


    div#create_order_popup.q-window
          div.q-window-block(style="width:400px;height:220px;margin:-150px 0 0 -400px")
            div.q-window-header Создать заказ
              a#create_order_popup_close(style="position: relative;left: 300px;") X
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  label(for="inpLabel") Название
                  input#inpLabel(type="text")
                div.q-form-data
                  label(for="inpClient") Клиент
                  select#inpClient
                    each item in clients
                        option(value= item.id)= item.label
                div.q-form-data
                  label(for="inpStatus") Статус
                  select#inpStatus
                    each item in order_statuses 
                        option(value= item.id)= item.label
                div.q-form-data
                  label(for="inpAmount") Сумма
                  input#inpAmount(type="text")

            div.q-buttons
              a#submit_create_order Создать
              a#cancel_create_order Отменить

    div#delete_order_popup.q-window
          div.q-window-block(style="width:400px;height:220px;margin:-150px 0 0 -400px")
            div.q-window-header Удалить заказ
              a#delete_order_popup_close(style="position: relative;left: 300px;") X
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  label(for="inpId") ID 
                  select#inpId
                    each item in orders 
                        option(value= item.id)= item.id

            div.q-buttons
              a#submit_delete_order Удалить
              a#cancel_delete_order Отменить

    div#update_order_popup.q-window
          div.q-window-block(style="width:400px;height:220px;margin:-150px 0 0 -400px")
            div.q-window-header Изменить заказ
              a#update_order_popup_close(style="position: relative;left: 300px;") X
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                label(for="inpUpid") ID
                  select#inpUpid
                    each item in orders 
                        option(value= item.id)= item.id
                div.q-form-data
                  label(for="inpUplabel") Название
                  input#inpUplabel(type="text")
                div.q-form-data
                  label(for="inpUpclient") Клиент
                  select#inpUpclient
                    each item in clients
                        option(value= item.id)= item.label
                div.q-form-data
                  label(for="inpUpstatus") Статус
                  select#inpUpstatus
                    each item in order_statuses 
                        option(value= item.id)= item.label
                div.q-form-data
                  label(for="inpUpamount") Сумма
                  input#inpUpamount(type="text")

            div.q-buttons
              a#submit_update_order Изменить
              a#cancel_update_order Отменить
